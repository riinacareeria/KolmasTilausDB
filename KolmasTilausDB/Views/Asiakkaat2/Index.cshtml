@model PagedList.IPagedList<KolmasTilausDB.Models.Asiakkaat>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

 <!-- JQuery -->
@section scripts {
    <script type="text/javascript">
        $("#yksittainenPostitoimipaikka").on("change", function () {
            var selValue = $("#yksittainenPostitoimipaikka").val();
            document.getElementById("postitoimipaikkaX").value = selValue;
        });
    </script>
}

<!-- Otsikot -->
<h2>Asiakaslista</h2>
<p></p>
<h5>Asiakkaita @Model.Count() kappaletta</h5>

<!-- Lisää asiakas -button -->
<br />
<a href="@Url.Action("Create", "Asiakkaat2")" class="btn btn-primary btn-sm">
    Lisää uusi asiakas
    <img src="~/Icons/person-add.svg" alt="Poista" width="25" height="25" title="Poista">
</a>
@*<a href="@Url.Action("Create", "Asiakkaat2")" class="btn btn-primary btn-large">Lisää uusi</a>*@
<br />
<br />

@*Hakutoiminto:*@
@using (Html.BeginForm("Index", "Asiakkaat2", FormMethod.Get))
{
    <div class="input-group">
        <!-- Haku -->
        <p class="px-1">@Html.Label("Haku:")</p>
        <p class="px-1">@Html.TextBox("SearchString2", ViewBag.currentFilter2 as string, new { @class = "form-control" })</p>
        <!-- Pudotusvalikko -->
        <p class="px-1">@Html.Label("Hae postitoimipaikalla:")</p>
        <p class="px-1">@Html.Hidden("postitoimipaikkaX", ViewBag.currentPostitoimipaikka as string, new { @id = "postitoimipaikkaX", @class = "form-control" }) </p>
        <p class="px-1">@Html.DropDownList("Postinumero", null, htmlAttributes: new { @id = "yksittainenPostitoimipaikka", @class = "form-control" })</p>
        <p class="px-1"><input type="submit" value="Search" class="form-control" /></p>
    </div>
}

