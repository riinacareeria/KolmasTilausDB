@*Lajittelu:*@
<table class="table table-hover">
    <tr>
        <th>AsiakasID</th>
        <th>@Html.ActionLink("Asiakkaan nimi", "Index", new { sortOrder = ViewBag.AsiakasNimiSortParm, currentFilter2 = ViewBag.currentFilter2, currentProductCategoryMUUTA = ViewBag.currentProductCategoryMUUTA })</th>
        <th>Osoite</th>
        <th>Postinumero</th>
    </tr>

    @foreach (var asiakas in Model)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => asiakas.AsiakasID)</td>
                <td>@Html.DisplayFor(modelItem => asiakas.Nimi)</td>
                <td>@Html.DisplayFor(modelItem => asiakas.Osoite)</td>
                <td>@Html.DisplayFor(modelItem => asiakas.Postinumero)</td>
                <td>
                    @*@Html.ActionLink("Muokkaa", "Edit", new { id = asiakas.AsiakasID }, new { @class = "btn btn-primary btn-large" })*@
                    <a href="@Url.Action("Edit", "Asiakkaat2", new { id = asiakas.AsiakasID })" class="btn btn-primary btn-sm">
                        <img src="~/Icons/pencil-square.svg" alt="Poista" width="20" height="20" title="Poista">
                    </a>

                    @*@Html.ActionLink("Lisätietoja", "Details", new { id = asiakas.AsiakasID }, new { @class = "btn btn-primary btn-large" })*@

                    @*@Html.ActionLink("Poista", "Delete", new { id = asiakas.AsiakasID }, new { @class = "btn btn-primary btn-large" })*@
                    <a href="@Url.Action("Delete", "Asiakkaat2", new { id = asiakas.AsiakasID })" class="btn btn-primary btn-sm">
                        <img src="~/Icons/trash3.svg" alt="Poista" width="20" height="20" title="Poista">
                    </a>

                </td>
        </tbody>
    }

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder = ViewBag.CurrentSort, currentFilter2 = ViewBag.currentFilter2, currentAsiakasCategory = ViewBag.currentAsiakasCategory,
    currentPostitoimipaikka = ViewBag.currentPostitoimipaikka }))

